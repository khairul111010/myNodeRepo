<%- include('layouts/head') %> <%- include('layouts/nav') %>
<body>
  <main>
    <h1>All products</h1>
    <% if(hasProducts) {%> <% for(let p of products) {%>

    <ul>
      <li>
        <h1>Name: <%= p.product %></h1>
        <h3>Price: <%= p.price %></h3>
        <h3>Quantity: <%= p.qty %></h3>
        <br />
      </li>
    </ul>

    <%}%> <%} else { %>
    <h1>No products to show</h1>
    <% } %>
  </main>
</body>
<%- include('layouts/foot') %>
